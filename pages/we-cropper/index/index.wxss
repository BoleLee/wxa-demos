.container{
    margin: 30rpx;
}
.card {
    position: relative;
    width: 690rpx;
    height: 752rpx;
    border-radius: 20rpx;
    background-color: #eee;
}
.card .image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.card .upload-btn {
  position:absolute;
  top: 10rpx;
  left: 10rpx;
  display:inline-block;
  padding:0 20rpx;
  border-radius: 40rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  color:#fff;
  background-color:rgba(0, 0, 0, 0.3);
}
