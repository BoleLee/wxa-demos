view {
  box-sizing: border-box;
 }

.barrage-area {
  height: 96rpx;
}
.barrage-swipe {
  overflow: hidden;
  position: relative;
  height: 100%;
  width: 100%;
}
.barrage-swipe-items-wrap {
  position: relative;
  overflow: hidden;
  height: 100%;
  width: 100%;
}
.barrage-swipe-item {
  position: absolute;
  width: 100%;
  height: 100%;
}

/* barrage style */
.vertical-center {
  display: flex; 
  height: 100%; 
  align-items: center;
}
.barrage-item-wrapper {
  color: #fff;
  background-color: #4979dd;
  border-radius: 21rpx;
  height: 42rpx;
  padding-right: 10rpx;
  max-width: 100%;
  display: flex;
  align-items: center;
}
.barrage-item-wrapper-avatar {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  margin-left: 4rpx;
  margin-right: 4rpx;
}
.barrage-item-wrapper-content {
  font-size: 28rpx;
  color: #fff;
  max-width: 606rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
